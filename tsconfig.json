{
    "compilerOptions": {
        "module": "es2022",
        "allowSyntheticDefaultImports": true,
        "target": "es2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "out",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "src/interface/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}